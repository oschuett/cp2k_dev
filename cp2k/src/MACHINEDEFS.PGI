### Machine dependent ###

PERL	= perl
CC	= cc
CPP	= cpp
FC	= pgf90 -Mfree
FCfixed	= pgf90 -Mfixed
LDR	= pgf90
AR	= ar -r

CDEFS	= -D__PGI -D__FFTW -D__FFTSG

DEBUG	= -g -C
OPT	= -O2 -fast
BFLAGS	= $(CDEFS)
FFLAGS	= $(BFLAGS) $(OPT)
LFLAGS	= $(BFLAGS) $(OPT)

LIBS	= -llapack -lblas -L../fftw -lfftw

OBJECTS_ARCHITECTURE	= machine_pgi.o
