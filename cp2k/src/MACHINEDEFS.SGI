### Machine dependent ###

PERL	= perl
CC	= cc
CPP	= /usr/lib/cpp
FC	= f90 -freeform
FCfixed	= f90 -fixedform
LDR	= f90

CDEFS	= -D__IRIX -D__FFTW

DEBUG	= -g -C
OPT	= -O3 -Ofast
BFLAGS	= -u $(CDEFS) -automatic -64
FFLAGS	= $(BFLAGS) $(OPT) -macro_expand
LFLAGS	= $(BFLAGS) $(OPT)

LIBS	= -L${HOME}/lib -lfftw -lcomplib.sgimath

OBJECTS_ARCHITECTURE	= machine_irix.o
