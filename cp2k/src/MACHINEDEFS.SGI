### Machine dependent ###

PERL	= perl
CC	= cc
CPP	= /usr/lib/cpp
FC	= f90 -freeform
FCfixed	= f90 -fixedform
LDR	= f90

CDEFS	= -D__IRIX -D__FFTW

DEBUG	= -g -C
#OPT	= -O3 -Ofast -64
#OPT	= -g -O -64
OPT	= -C -g -64
BFLAGS	= -u $(CDEFS) -automatic
FFLAGS	= $(BFLAGS) $(OPT) -macro_expand
LFLAGS	= $(BFLAGS) $(OPT)

LIBS	= -L${HOME}/lib -lfftw -lcomplib.sgimath

OBJECTS_ARCHITECTURE	= machine_irix.o
