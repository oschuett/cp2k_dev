################ old input to keeep cp2k happy ##############

&CP2K
 PROGRAM      Quickstep
 PROJECT      H2O
 IOLEVEL      10
 FFTLIB       FFTESSL
# RUN_TYPE geo_opt
&END

&GEOOPT 
 MAX_ITER 0 
&END 

&IO
 BASIS_SET_FILE GTH_BASIS_SETS
 POTENTIAL_FILE POTENTIAL
&END

&MD
 ensemble:     nve                     (nve,nvt,npt_i,npt_f)
 steps:        1
 walltime:     40.0
 timestep:     0.1 fs                  time step [fs]
 temperature:  0.0                   temperature [K]
 restart:      init                    start type (pos,posvel)
 constraints:  off
 shake:        1.0E-10
 nose_parameter & 
  length:    3        &
  Yoshida:   3        &
  timecon:   100.0 fs &
  mts:       2
&END

&DFT
# LSD
 FUNCTIONAL PADE #BLYP
# FUNCTIONAL_ROUTINE DEBUG # TEST # TEST_LSD # DEBUG
 XC_DERIV      NN50_SMOOTH # NN6_SMOOTH
 XC_SMOOTH_RHO NN50 #N10
 DENSITY_SMOOTH_CUTOFF_RANGE 0
 DENSITY_CUTOFF 1.e-9
&END

&QS
 CUTOFF       250 #5000
 REL_CUTOFF  30
&END

&SCF
 GUESS        restart
# MAX_SCF 1
# OT
&END

&PRINT MEDIUM
 FORCES 
 DISTANCES 
 PRECISION 10 
 GRID_INFO 
&END

&KIND H
 BASIS_SET    DZVP-GTH
 POTENTIAL    GTH-PBE-q1
&END

&KIND O
 BASIS_SET    DZVP-GTH
 POTENTIAL    GTH-PBE-q6
 LDA_CORE_RADIUS 0 0 0 0
&END

&CELL
 UNIT         ANGSTROM
 ABC          5.0  5.0  5.0
&END

