&CP2K
 PROGRAM      Quickstep
 PROJECT      xas_6-31Gs
 IOLEVEL      10
 FFTLIB       FFTSG
 RUN_TYPE     WFN_OPT
&END 

&IO
 BASIS_SET_FILE /users/marcella/basis/ALL_BASIS_SETS
 POTENTIAL_FILE /users/marcella/basis/POTENTIAL
&END

&DFT
 FUNCTIONAL   Blyp
 density_cutoff 1.0e-11
 LSD
&END

&QS
 METHOD       GAPW
 CUTOFF       280
 NGRID        1
 EPS_GVG      1.0E-8
 EPS_PGF_ORB  1.0E-8
 QUADRATURE   GC_LOG
 EPSFIT       1.E-4
 EPSISO       1.0E-12
 EPSRHO0      1.E-8
 LMAXN0       4
 LMAXN1       6
 ALPHA0_H     10
&END

 ALPHA0_S
&SCF
 GUESS        ATOMIC
 MIXING       0.4
 EPS_DIIS     0.4
 EPS_SCF      5.0E-7
 MAX_SCF      20
&END

  &PRINT MEDIUM
    MO_EIGENVALUES
  &END

&FORCE_EVAL

  &DFT
    &XAS
      CONVERGENCE 0.00001
      METHOD        TP_HH
      MAXSTEP       40
      EACH_STEP     1
      STATE_TYPE    1s
      STATE_SEARCH  10
      FNAME         pippo
      ATOMS_LIST    1 4
      LOCALIZE_WFN
    &END
  &END SECTION DFT

  &SUBSYS
    &CELL
       UNIT   ANGSTROM
       ABC   10.0   10.0    10.0 
    &END CELL
  &END SUBSYS
&END FORCE_EVAL


&KIND O
BASIS_SET  6-31G*
POTENTIAL ALL
LEBEDEV_GRID 70
RADIAL_GRID 300
&END

&KIND  H
BASIS_SET  6-31G*
POTENTIAL  ALL
LEBEDEV_GRID 60
RADIAL_GRID 300
&END


