&GLOBAL
 PROGRAM      Quickstep
 PROJECT      gapwXC_gth_pade
 IOLEVEL      LOW
 FFTLIB       FFTSG
 RUN_TYPE     ENERGY
&END

&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &XC
      &XC_FUNCTIONAL
        &PADE
        &END
      &END
    &END SECTION XC
    &QS
       METHOD       GAPW_XC
       EPS_GVG      1.0E-6
       EPS_PGF_ORB  1.0E-6
       QUADRATURE   GC_LOG
       EPSFIT       1.E-4
       EPSISO       1.0E-12
       EPSRHO0      1.E-8
       LMAXN0       2
       LMAXN1       6
       ALPHA0_HARD     10
    &END SECTION QS
    &MGRID
       NGRIDS        1
       CUTOFF       250
    &END SECTION MGRID
  &END SECTION DFT
  &SUBSYS
    &CELL
       UNIT   ANGSTROM
       ABC          6.0  6.0  6.0
    &END CELL
  &END SUBSYS
&END FORCE_EVAL


&SCF
 GUESS        ATOMIC
 EPS_SCF      1.0E-4
&END

&PRINT MEDIUM
&END

&KIND H
 BASIS_SET    DZVP-GTH-PADE
 POTENTIAL    GTH-PADE-q1
 LEBEDEV_GRID 50
 RADIAL_GRID  50
&END

&KIND O
 BASIS_SET    DZVP-GTH-PADE
 POTENTIAL    GTH-PADE-q6
 LEBEDEV_GRID 50
 RADIAL_GRID  50
&END

&COORD
 O   0.000000    0.000000   -0.065587
 H   0.000000   -0.757136    0.520545
 H   0.000000    0.757136    0.520545
&END

