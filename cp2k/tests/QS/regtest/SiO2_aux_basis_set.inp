
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME fitGTH_BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
      NGRIDS 4
    &END MGRID
    &QS
      &HARRIS
        ACTIVATE TRUE
      &END HARRIS
    &END QS
    &SCF
      MAX_SCF 1
    # GUESS        ATOMIC
      SCF_GUESS DENSITIES
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.0 8.0 12.0
      UNIT ANGSTROM
    &END CELL
    &COORD
    SI   4.000000  4.000000  6.000000
    O    4.000000  4.000000  4.500000
    O    4.000000  4.000000  7.500000
    &END COORD
    &KIND Si
      AUX_BASIS_SET FIT-4s
      BASIS_SET DZVP-GTH
    # POTENTIAL GTH-PADE-q4+4
      POTENTIAL GTH-PADE-q4
    # CORE_CORRECTION +4
    &END KIND
    &KIND O
      AUX_BASIS_SET FIT-4s
      BASIS_SET DZVP-GTH
    # POTENTIAL GTH-PADE-q6-2
      POTENTIAL GTH-PADE-q6
    # CORE_CORRECTION -2
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTSG
  PROGRAM Quickstep
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 0
    TIMESTEP 0.5
    TEMPERATURE 300.0
    RESTART INIT
  &END MD
&END MOTION
