&FORCE_EVAL
  METHOD Quickstep
  &DFT
   BASIS_SET_FILE_NAME ../BASIS_MOLOPT
   POTENTIAL_FILE_NAME ./POTENTIAL
    &MGRID
      NGRIDS 5
      CUTOFF 160
    &END MGRID
    &QS
      METHOD       GAPW
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      &PRINT
        &RESTART
           EACH 1 1 0
           ADD_LAST NUMERIC
        &END
      &END
      SCF_GUESS RESTART
      MAX_SCF 30
      EPS_SCF 1.E-6
      &OUTER_SCF
        MAX_SCF 3
        EPS_SCF 1.E-6
      &END
      &OT 
        MINIMIZER DIIS
        N_DIIS 7
        PRECONDITIONER FULL_ALL
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
    &END XC
    &POISSON
       PERIODIC NONE
       POISSON_SOLVER MT
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 5.0 5.0 5.0
      UNIT ANGSTROM
      PERIODIC NONE
    &END CELL
    &COORD
O  0.000000    0.000000    0.117226
H  0.000000    0.757136   -0.468906
H  0.000000   -0.757136   -0.468906
    &END COORD
    &KIND H
      &BASIS
         # 6-31G* Hydrogen
  2
  1  0  0  3  1
       18.7311369600   0.0334946043
        2.8253943650   0.2347269535
        0.6401216923   0.8137573262
  2  0  0  1  1
        0.1612777588   1.0000000000
      &END
      POTENTIAL ALL
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-GTH
      POTENTIAL GTH-BLYP-q6
      GPW_TYPE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT conf1_MOLOPT
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 100
    TIMESTEP 1.0
    TEMPERATURE 300.0
    TEMP_TOL 50.0 
  &END MD
&END MOTION
