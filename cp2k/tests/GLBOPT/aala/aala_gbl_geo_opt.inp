&GLOBAL
  PROGRAM_NAME GLOBAL_OPT
  RUN_TYPE NONE
&END GLOBAL

&MOTION
 &GEO_OPT
  	 OPTIMIZER CG
  	 MAX_ITER 3
 &END GEO_OPT

 &MD
    ENSEMBLE NVT
    STEPS 300
    TIMESTEP 1.0
    TEMPERATURE 300.0
    &THERMOSTAT
        REGION MOLECULE
        TYPE NOSE
        &NOSE
            LENGTH 3
            YOSHIDA 3
            TIMECON 1000
        &END NOSE
    &END
 &END MD
&END MOTION

&GLOBAL_OPT
  
!  	PRESAMPLING_FILE_NAME lalala.xyz
    NUMBER_OF_WALKERS 4
!    POINT_SRC PRESAMPLING
!	POINT_RANKING ole123
!	SCHEDULER ole567
!	&PRESAMPLING
!		TRJ_FILE lalala.xyz
!	&END PRESAMPLING

&END GLOBAL_OPT

&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name aala.pot
      parmtype CHM
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE SPME
        GMAX 20
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 20 20 20
    &END CELL
    &TOPOLOGY
      CHARGE_BETA
      COORD_FILE_NAME aala.pdb
      COORDINATE PDB
    &END TOPOLOGY

    
    &COLVAR
      &DISTANCE
        ATOMS 1 4
      &END DISTANCE
    &END COLVAR
    &COLVAR
      &ANGLE
        ATOMS 1 3 2
      &END ANGLE
    &END COLVAR
  &END SUBSYS
&END FORCE_EVAL
