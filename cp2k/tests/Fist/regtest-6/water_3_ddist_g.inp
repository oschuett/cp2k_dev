
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name ../sample_pot/water.pot
      parmtype CHM
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
      &SPLINE
        EMAX_SPLINE 1.0
      &END
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE pme
        ALPHA .44
        NS_MAX 25
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
      UNIT ANGSTROM
    &END CELL
    &COLVAR
      &DISTANCE_DIFFERENCE
        &POINT
          TYPE GEO_CENTER
          ATOMS 4
        &END
        &POINT
          TYPE GEO_CENTER
          ATOMS 6
        &END
        &POINT
          TYPE GEO_CENTER
          ATOMS 6
        &END
        &POINT
          TYPE GEO_CENTER
          ATOMS 1
        &END
        ATOMS 1 2 3 4 
        # distance 1 = ( 4 - 6 )
        # distance 2 = ( 6 - 1 )
      &END DISTANCE_DIFFERENCE
    &END COLVAR
    &TOPOLOGY
      COORD_FILE_NAME ../sample_xyz/water_2.xyz
      COORDINATE xyz
      &GENERATE
        REORDER
        CREATE_MOLECULES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTSG
  PROJECT water_3
  RUN_TYPE MD
&END GLOBAL
&MOTION
  &CONSTRAINT
    &COLLECTIVE
      TARGET -3.78
      INTERMOLECULAR
      COLVAR 1
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVE
    STEPS 10
    TIMESTEP 2.5
    TEMPERATURE 298
    &NOSE
      LENGTH 3
      YOSHIDA 3
      TIMECON 1000
      MTS 2
    &END NOSE
  &END MD
&END MOTION
