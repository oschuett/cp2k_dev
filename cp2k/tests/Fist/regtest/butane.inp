
&FORCE_EVAL
  &MM
    &FORCEFIELD
      parmfile ../sample_pot/butane.pot
      parmtype CHM
    &END FORCEFIELD
    &POISSON_MM
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 24
        O_SPLINE 6
      &END EWALD
    &END POISSON_MM
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
      UNIT ANGSTROM
    &END CELL
