
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parm_file_name ../sample_pot/water.pot
      parmtype CHM
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE pme
        ALPHA .44
        NS_MAX 25
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
      UNIT ANGSTROM
    &END CELL
    &COLVAR
      &DISTANCE
        &POINT
          ATOMS 1 2 3
        &END
        &POINT
          TYPE FIX_POINT
          XYZ 0.0 0.0 0.0
        &END
        POINTS 1 2
      &END DISTANCE
    &END COLVAR
    &TOPOLOGY
      COORD_FILE_NAME ../sample_pdb/water_2.pdb
      COORDINATE pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTSG
  PROJECT water_3
  RUN_TYPE MD
&END GLOBAL
&MOTION
  &CONSTRAINT
    &COLLECTIVE
      COLVAR 1
      INTERMOLECULAR
    &END COLLECTIVE
  &END CONSTRAINT
  &MD
    ENSEMBLE NVE
    STEPS 10
    TIMESTEP 2.5
    TEMPERATURE 298
    &NOSE
      LENGTH 3
      YOSHIDA 3
      TIMECON 1000
      MTS 2
    &END NOSE
  &END MD
&END MOTION
