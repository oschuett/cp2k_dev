
&FORCE_EVAL
   METHOD FIST
  &MM
    &FORCEFIELD
      parmfile water_fake.pot
      parmtype CHM
      &CHARGE
        ATOM OT
        CHARGE -0.8476
      &END CHARGE
      &CHARGE
        ATOM HT
        CHARGE 0.4238
      &END CHARGE
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 24
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 24.955 24.955 24.955
      UNIT ANGSTROM
    &END CELL
    &TOPOLOGY
      COORD_FILE ../sample_pdb/water_1.pdb
      COORDINATE pdb
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTW
  PROJECT water_1
  RUN_TYPE md
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 2
    TIMESTEP 2.5
    TEMPERATURE 298
    &NOSE
      LENGTH 3
      YOSHIDA 3
      TIMECON 1000
      MTS 2
    &END NOSE
  &END MD
  &CONSTRAINT
    &G3X3
      DISTANCES 1.8897268 1.8897268 3.0859239
      MOLECULE 1
      ATOMS 1 2 3
      &RESTRAINT
          K   [kcalmol*angstrom^-2]  55.0
      &END
    &END G3X3
  &END CONSTRAINT
&END MOTION
