
&FORCE_EVAL
  METHOD FIST
  &MM
    &FORCEFIELD
      parmfile ../sample_pot/NaCl-H2O.pot
      parmtype CHM
      &NONBONDED
        &BMHFT
          atoms Na+ Na+
          RCUT 11.0
        &END BMHFT
        &BMHFT
          atoms Cl- Na+
          RCUT 11.0
        &END BMHFT
        &BMHFT
          atoms Cl- Cl-
          RCUT 11.0
        &END BMHFT
      &END NONBONDED
    &END FORCEFIELD
    &POISSON
      &EWALD
        EWALD_TYPE spme
        ALPHA .44
        GMAX 60
        O_SPLINE 6
      &END EWALD
    &END POISSON
  &END MM
  &SUBSYS
    &CELL
      ABC 10.5375 10.5375 30.000
      UNIT ANGSTROM
    &END CELL
    &TOPOLOGY
      CONN_FILE NaCl-H2O.psf
      CONNECTIVITY PSF
      COORD_FILE ../sample_pdb/NaCl-H2O.pdb
      COORDINATE PDB
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  FFTLIB FFTW

  PROJECT MYMOL
  RUN_TYPE MD
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE
    STEPS 5
    TIMESTEP 0.5
    TEMPERATURE 298
    TEMP_TOL 10
  &END MD
&END MOTION
